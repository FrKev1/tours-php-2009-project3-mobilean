{# This is the page that lets the client register the initial admin user #}

{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Enregitrez-vous{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Enregistrez votre compte administrateur initial</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Enregistrez-vous</button>
    {{ form_end(registrationForm) }}
{% endblock %}
